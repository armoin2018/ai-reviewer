# Git attributes for push protection and secret scanning

# Exclude test files from secret scanning
tests/** linguist-generated=true
test/** linguist-generated=true
**/tests/** linguist-generated=true  
**/test/** linguist-generated=true
**/*test*/** linguist-generated=true
*.test.* linguist-generated=true
*.spec.* linguist-generated=true

# Test data files should be treated as test content
tests/**/*.* merge=ours
test/**/*.* merge=ours

# Mock and fixture files
**/mocks/** linguist-generated=true
**/fixtures/** linguist-generated=true
**/stubs/** linguist-generated=true

# Common test file patterns
*.test.js linguist-generated=true
*.spec.js linguist-generated=true
*.test.ts linguist-generated=true
*.spec.ts linguist-generated=true
*.test.php linguist-generated=true
*.spec.php linguist-generated=true
